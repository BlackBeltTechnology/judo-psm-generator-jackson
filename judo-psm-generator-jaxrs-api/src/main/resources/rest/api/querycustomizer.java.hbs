package {{ queryCustomizerPackageName self }};

/**
 * Query customizer for searching {@link {{ classFqName self }} } instances.
 */
public interface {{ queryCustomizerName self }} {
    {{# each self.relations as | relation | }}
    {{# unless (isSeek self)}}
    @io.swagger.v3.oas.annotations.media.Schema(name = "{{ relation.name }}")
    {{{ relationTargetTypeDefinition relation }}} get{{ relation.name.firstToUpperCase }}();
    {{/ unless }}
    {{/ each }}

    {{# each self.attributes as | attribute | }}
    @io.swagger.v3.oas.annotations.media.Schema(name = "{{ attribute.name }}")
    {{{ attributeTargetTypeDefinition attribute }}} get{{ attribute.name.firstToUpperCase }}();
    {{/ each }}

}
